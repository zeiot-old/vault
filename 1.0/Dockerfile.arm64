# VERSION 1.0.0
# AUTHOR:         Nicolas Lamirault <nicolas.lamirault@gmail.com>
# DESCRIPTION:    zeiot/rpi-vault

FROM resin/armv7hf-debian:stretch

LABEL summary="Prometheus node exporter for ARM" \
      description="Prometheus node exporter for ARM devices" \
      name="zeiot/rpi-node_exporter" \
      url="https://github.com/zeiot/rpi-node_exporter" \
      maintainer="Nicolas Lamirault <nicolas.lamirault@gmail.com>"

ENV VAULT_VERSION=1.0.0

RUN [ "cross-build-start" ]

RUN apt-get update \
    && apt-get install -y unzip gosu dumb-init

ADD https://releases.hashicorp.com/vault/${VAULT_VERSION}/vault_${VAULT_VERSION}_linux_arm64.zip /vault.zip

RUN addgroup vault \
    && adduser --system --group vault

RUN unzip /vault.zip \
    && rm /vault.zip \
    && mv vault /usr/bin/vault \
    && mkdir -p /vault/logs \
    && mkdir -p /vault/file \
    && mkdir -p /vault/config \
    && chown -R vault:vault /vault

VOLUME /vault/logs
VOLUME /vault/file
VOLUME /vault/config

RUN [ "cross-build-end" ]

EXPOSE 8200

#COPY docker-entrypoint.sh /usr/local/bin/docker-entrypoint.sh
#ENTRYPOINT ["/usr/local/bin/docker-entrypoint.sh"]
ENTRYPOINT ["/usr/bin/vault"]

CMD ["server"]
